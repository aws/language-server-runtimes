    "husky": "^8.0.3",
    "prettier": "3.2.5",
    "sinon": "^17.0.1",
    "ts-mocha": "^10.0.0",
    "ts-sinon": "^2.0.2",
    "typescript": "^5.2.2"
  },
  "typesVersions": {
