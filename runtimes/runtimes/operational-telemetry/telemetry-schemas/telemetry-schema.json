{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OperationalTelemetrySchema",
    "type": "object",
    "oneOf": [
        {
            "$ref": "#/definitions/ResourceUsageMetric"
        },
        {
            "$ref": "#/definitions/OperationalTelemetryResource"
        },
        {
            "$ref": "#/definitions/ErrorEventAttributes"
        }
    ],
    "definitions": {
        "ResourceUsageMetric": {
            "title": "ResourceUsageMetric",
            "type": "object",
            "additionalProperties": false,
            "required": ["baseInfo", "resourceValues"],
            "properties": {
                "resourceValues": {
                    "type": "object",
                    "$ref": "#/definitions/ResourceUsageAttributes"
                }
            }
        },
        "ResourceUsageAttributes": {
            "title": "ResourceUsageAttributes",
            "type": "object",
            "additionalProperties": false,
            "required": ["userCpuUsage", "systemCpuUsage", "heapUsed", "heapTotal", "rss"],
            "properties": {
                "userCpuUsage": {
                    "type": "number"
                },
                "systemCpuUsage": {
                    "type": "number"
                },
                "heapUsed": {
                    "type": "number"
                },
                "heapTotal": {
                    "type": "number"
                },
                "rss": {
                    "type": "number"
                }
            }
        },
        "OperationalTelemetryResource": {
            "title": "OperationalTelemetryResource",
            "type": "object",
            "required": [
                "sessionId",
                "server.name",
                "server.version",
                "clientInfo.name",
                "clientInfo.version",
                "clientInfo.extension.name",
                "clientInfo.extension.version"
            ],
            "additionalProperties": false,
            "properties": {
                "sessionId": {
                    "type": "string",
                    "description": "The session id of the runtime that emitted the telemetry data"
                },
                "operational.telemetry.schema.version": {
                    "type": "string",
                    "description": "The version of the operational telemetry schema that the telemetry data is compliant with",
                    "const": "1.0.0"
                },
                "server.name": {
                    "type": "string",
                    "description": "The name of the server that emitted the telemetry data"
                },
                "server.version": {
                    "type": "string",
                    "description": "The version of the server that emitted the telemetry data"
                },
                "clientInfo.name": {
                    "type": "string",
                    "description": "The name of the client that emitted the telemetry data"
                },
                "clientInfo.version": {
                    "type": "string",
                    "description": "The version of the client that emitted the telemetry data"
                },
                "clientInfo.extension.name": {
                    "type": "string",
                    "description": "The name of the client extension that emitted the telemetry data"
                },
                "clientInfo.extension.version": {
                    "type": "string",
                    "description": "The version of the client extension that emitted the telemetry data"
                }
            }
        },
        "ErrorEventAttributes": {
            "title": "ErrorEventAttributes",
            "type": "object",
            "additionalProperties": false,
            "required": ["errorName", "errorOrigin", "errorType"],
            "properties": {
                "errorName": {
                    "type": "string"
                },
                "errorOrigin": {
                    "type": "string",
                    "enum": ["caughtError", "uncaughtException", "unhandledRejection", "other"]
                },
                "errorType": {
                    "type": "string"
                },
                "errorCode": {
                    "type": "string"
                },
                "errorMessage": {
                    "type": "string"
                }
            }
        }
    }
}
