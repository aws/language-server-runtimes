{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ResourceUsageMetric": {
            "title": "ResourceUsageMetric",
            "allOf": [
                { "$ref": "./base-event-schema.json" },
                {
                    "required": ["userCpuUsage", "systemCpuUsage", "heapUsed", "heapTotal", "rss"],
                    "additionalProperties": false,
                    "properties": {
                        "userCpuUsage": {
                            "type": "number"
                        },
                        "systemCpuUsage": {
                            "type": "number"
                        },
                        "heapUsed": {
                            "type": "number"
                        },
                        "heapTotal": {
                            "type": "number"
                        },
                        "rss": {
                            "type": "number"
                        }
                    }
                }
            ]
        }
    }
}
