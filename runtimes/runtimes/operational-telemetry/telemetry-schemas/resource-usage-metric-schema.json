{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ResourceUsageMetric": {
            "title": "ResourceUsageMetric",
            "type": "object",
            "additionalProperties": false,
            "required": ["baseInfo", "resourceValues"],
            "properties": {
                "baseInfo": {
                    "type": "object",
                    "$ref": "./base-event-schema.json"
                },
                "resourceValues": {
                    "type": "object",
                    "$ref": "#/definitions/ResourceUsageAttr"
                }
            }
        },
        "ResourceUsageAttr": {
            "title": "ResourceUsageAttr",
            "type": "object",
            "additionalProperties": false,
            "required": ["userCpuUsage", "systemCpuUsage", "heapUsed", "heapTotal", "rss"],
            "properties": {
                "userCpuUsage": {
                    "type": "number"
                },
                "systemCpuUsage": {
                    "type": "number"
                },
                "heapUsed": {
                    "type": "number"
                },
                "heapTotal": {
                    "type": "number"
                },
                "rss": {
                    "type": "number"
                }
            }
        }
    }
}
