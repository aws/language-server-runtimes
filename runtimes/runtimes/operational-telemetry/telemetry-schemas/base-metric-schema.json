{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Base Metric Schema",
    "type": "object",
    "required": ["name", "timestamp"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "timestamp": {
            "type": "number",
            "description": "The timestamp when the metric was recorded"
        }
    }
}
