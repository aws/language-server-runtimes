{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "MemoryMetric": {
            "allOf": [
                { "$ref": "./base-metric-schema.json" },
                {
                    "properties": {
                        "unit": {
                            "type": "string",
                            "enum": ["bytes", "kb", "mb", "gb"],
                            "description": "Memory unit"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["heap", "stack", "total"],
                            "description": "Type of memory measurement"
                        }
                    },
                    "required": ["unit", "type"]
                }
            ]
        }
    }
}
